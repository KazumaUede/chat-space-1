.left__user
  .left__user-content
    %h3.left__user-name
      = current_user.name
    %ul.left__list
      %li.left__user--new-group
        = link_to new_group_path do
          = fa_icon "pencil-square-o"
      %li.left__user--edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon "cog"

.left__groups
  - current_user.groups.each do |group|
    .left__groups-list
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .left__group
            .left__group-name
              = group.name
            .left__group-message
              = group.show_last_message
